{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./dist",

    "strict": true,
    "strictPropertyInitialization": false,

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "jest"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist/**/*", "./node_modules/**/*", "./**/*.spec.ts"]
}
